{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": ["react-native", "react"],
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/queries/*": ["./src/queries/*"],
      // "@/components/*": ["src/components/*"],
      // "@/screens/*": ["src/screens/*"],
      // "@/types/*": ["src/types/*"],
      // "@/utils/*": ["src/utils/*"],
      // "@/hooks/*": ["src/hooks/*"],
      // "@/state/*": ["src/state/*"],
      // "@/services/*": ["src/services/*"]
    }
  }
}
